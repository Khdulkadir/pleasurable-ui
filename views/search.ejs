<%- include('./partials/head') %>
<link rel="stylesheet" href="/styles/category.css">

<title>Red Pers - Zoekenresultaten voor <%= searchterm %></title>
</head>

<body>
<%- include('./partials/header') %>

<main>
    <h2>Zoeken binnen Red Pers</h2>

    <form class="search-form" action="/search">
        <input class="search-input " name="q">
        <button type="submit" class="search-button">
        <a>
            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M779.385-153.846 528.923-404.307q-30 25.538-69 39.538-39 14-78.385 14-96.1 0-162.665-66.529-66.566-66.529-66.566-162.577t66.529-162.702q66.529-66.654 162.577-66.654 96.049 0 162.702 66.565Q610.769-676.101 610.769-580q0 41.692-14.769 80.692-14.769 39-38.769 66.693l250.462 250.461-28.308 28.308ZM381.538-390.769q79.616 0 134.423-54.808Q570.769-500.385 570.769-580q0-79.615-54.808-134.423-54.807-54.808-134.423-54.808-79.615 0-134.423 54.808Q192.308-659.615 192.308-580q0 79.615 54.807 134.423 54.808 54.808 134.423 54.808Z"></path></svg><span class="search-text">Zoeken</span>
        </a>
        </button>
    </form>

    <h3 id="searchterm" class="hidden">Zoekresultaten voor: <%= searchterm %></h3>

  <div class="results">
    <% if (posts[0]) { %>
      <% posts.forEach(function(post) { %>
        <a href="/artikel/<%= post.slug %>">
          <article class="category-card">
            <p class="date"><%= post.date %></p>
      
            <h3><%- post.title.rendered %></h3>
            
            <% if (post.jetpack_featured_media_url[0]) { %>
              <img src="<%= post.yoast_head_json.og_image[0].url %>" alt="" width="<%= post.yoast_head_json.og_image[0].width %>" height="<%= post.yoast_head_json.og_image[0].height %>">
            <% } else { %>
              <img src="/assets/errorimg.png" alt="Kan foto niet laden">
            <% } %>
          </article>
        </a> 
      <% }) %>  
    <% } else {%>
      <h3> Er zijn geen artikelen</h3>
    <% } %>
  </div>
</main>

<%- include('./partials/footer') %>